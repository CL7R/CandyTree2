#import <UIKit/UIKit.h>

@interface PublicView : UIViewController

/*
 desc：初始化UILabel
 @param:label：传递得到
 @param:isDefault：1默认风格0自定义
 @param:textSize：字体大小
 @param:textColor：字体颜色
 return：
 */
+(void)initLabel:(UILabel *)label 
       isDefault:(int)isDefault
        textSize:(int)textSize
       textColor:(UIColor *)textColor;
/*
 desc：初始化TextField
 @param:tex：传递得到
 @param:isDefault：1默认风格0自定义
 @param:textSize：字体大小
 @param:textColor：字体颜色
 return：
 */
+(void)initTextField:(UITextField *)tex 
       isDefault:(int)isDefault
        textSize:(int)textSize
       textColor:(UIColor *)textColor;
/*
 desc：初始化button
 @param:btn：传递得到
 @param:isDefault：1默认风格0自定义
 @param:textSize：字体大小
 @param:textColor：字体颜色
 @param:btnBacImg：背景图片
 return：
 */
+(void)initButton:(UIButton *)btn 
           isDefault:(int)isDefault
            textSize:(int)textSize
           textColor:(UIColor *)textColor
           btnBacImg:(UIImage *)btnBacImg;
/*
 desc：初始化view边框
 @param:view：传递得到
 return：
 */
+(void)initViewBorder:(UIView *)view;
@end
